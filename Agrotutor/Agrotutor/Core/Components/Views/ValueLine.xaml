<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agrotutor.Core.Components.Views.ValueLine"
             Padding="8">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
    </Grid.RowDefinitions>
    <Label x:Name="LblText" Grid.Row="0" Grid.Column="0" FontAttributes="Bold" />
    <Label x:Name="LblValue" Grid.Row="1" Grid.Column="0"  />
    <Image x:Name="Image" WidthRequest="16" HorizontalOptions="Center" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"/>
</Grid>