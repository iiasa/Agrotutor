<?xml version="1.0" encoding="UTF-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mvvm="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             mvvm:ViewModelLocator.AutowireViewModel="True"
             Title="Costs in this area"
             xmlns:views="clr-namespace:Agrotutor.Core.Components.Views"
             Padding="16" x:Class="Agrotutor.Modules.Benchmarking.Views.ViewCostPage">
    <ContentPage.Content>
        <StackLayout>
            <!--<Label
                HorizontalOptions="StartAndExpand"
                Text="Costs in this area"
                FontSize="20" />-->

            <views:SimpleStatsSingle
                AverageImageSource="peso3.png"
                MinImageSource="peso2.png"
                MaxImageSource="peso4.png"
                Unit="pesos"
                AverageText="average"
                MinText="minimum"
                MaxText="maximum"
                AverageValue="{Binding Avg}"
                MinValue="{Binding Min}"
                MaxValue="{Binding Max}" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ShowAbout}"/>
                </StackLayout.GestureRecognizers>

                <Label VerticalOptions="Center" Text="About historical data" />
                <Image Source="question.png" HeightRequest="32" WidthRequest="32"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>