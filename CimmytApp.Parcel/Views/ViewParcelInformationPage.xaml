<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:localization="clr-namespace:Helper.Localization.Localization;assembly=Helper.Localization"
             x:Class="CimmytApp.Parcel.Views.ViewParcelInformationPage"
             Title="{localization:Translate view}">
    <ScrollView>
        <StackLayout Margin="16">
            <Label Text="Agricultural cycle"  FontSize="10" />
            <BoxView Color="CadetBlue" HeightRequest="2" WidthRequest="100" />
            <Label Text="{Binding Parcel.AgriculturalCycle, Mode=TwoWay}" FontSize="Medium" HorizontalTextAlignment="End" Margin="16, 8, 16, 8" />

            <Label Text="Year"  FontSize="10" />
            <BoxView Color="CadetBlue" HeightRequest="2" WidthRequest="100" />
            <Label Text="2015" FontSize="Medium" HorizontalTextAlignment="End" Margin="16, 8, 16, 8" />

            <Label Text="Estimated parcel area" FontSize="10" />
            <BoxView Color="CadetBlue" HeightRequest="2" WidthRequest="100" />
            <Label Text="{Binding Parcel.EstimatedParcelAreaWithUnit}" FontSize="Medium" HorizontalTextAlignment="End" Margin="16, 8, 16, 8" />

            <Label Text="Producer name"  FontSize="10" />
            <BoxView Color="CadetBlue" HeightRequest="2" WidthRequest="100" />
            <Label Text="{Binding Parcel.ProducerName}" FontSize="Medium" HorizontalTextAlignment="End" Margin="16, 8, 16, 8" />

            <Label Text="Parcel name"  FontSize="10" />
            <BoxView Color="CadetBlue" HeightRequest="2" WidthRequest="100" />
            <Label Text="{Binding Parcel.ParcelName}" FontSize="Medium" HorizontalTextAlignment="End" Margin="16, 8, 16, 8" />

            <Label Text="Technology used"  FontSize="10" />
            <BoxView Color="CadetBlue" HeightRequest="2" WidthRequest="100" />
            <Label Text="{Binding Parcel.TechnologiesScreenList}" FontSize="Medium" HorizontalTextAlignment="End" Margin="16, 8, 16, 8" />

            <Label Text="Crop" FontSize="10" />
            <BoxView Color="CadetBlue" HeightRequest="2" WidthRequest="100" />
            <Label Text="{Binding Parcel.Crop}" FontSize="Medium" HorizontalTextAlignment="End" Margin="16, 8, 16, 8" />

            <Label Text="Performance"  FontSize="10" />
            <BoxView Color="CadetBlue" HeightRequest="2" WidthRequest="100" />
            <Label Text="{Binding Parcel.Performance}" FontSize="Medium" HorizontalTextAlignment="End" Margin="16, 8, 16, 8" />

            <Label Text="Irrigation"  FontSize="10" />
            <BoxView Color="CadetBlue" HeightRequest="2" WidthRequest="100" />
            <Label Text="{Binding Parcel.Irrigation}" FontSize="Medium" HorizontalTextAlignment="End" Margin="16, 8, 16, 8" />

            <Label Text="Planting date"  FontSize="10" />
            <BoxView Color="CadetBlue" HeightRequest="2" WidthRequest="100" />
            <Label Text="{Binding Parcel.PlantingDate}" FontSize="Medium" HorizontalTextAlignment="End" Margin="16, 8, 16, 8" />

