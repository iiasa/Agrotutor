             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:localization="clr-namespace:Helper.Localization.Localization;assembly=Helper.Localization"
             x:Class="CimmytApp.Parcel.Views.AddParcelInformationPage">
    <!--Title="Editar"-->
    <StackLayout>
        <Image Source="delineation.png" Grid.Row="0" Grid.Column="1">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding DeliniateParcelCommand}" CommandParameter="http://conservacion.cimmyt.org/es/protocolos-de-suelo/" />
            </Image.GestureRecognizers>
        </Image>
        <Label Text="Por favor introduce toda la informaciÃ³n requerida" IsVisible="{Binding InformationMissing}" />
        <Button Text="Deliniate Parcel" Command="{Binding DeliniateParcelCommand}" IsEnabled="{Binding NeedsDeliniation}" />
