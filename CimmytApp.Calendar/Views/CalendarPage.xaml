<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CimmytApp.Calendar.Views.CalendarPage" xmlns:mvvm="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    mvvm:ViewModelLocator.AutowireViewModel="True"
    xmlns:controls="clr-namespace:XamForms.Controls;assembly=XamForms.Controls.Calendar">
    <!--Title="{localization:Translate calendar}"-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--<Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />-->
        <controls:Calendar x:Name="CalendarCtr" Padding="10,0,10,0" StartDay="Monday" SelectedBorderWidth="4"
            DisabledBorderColor="Black" MultiSelectDates="True" SelectedDates="{Binding SelectedDatesList}"
            SelectedDate="{Binding SelecteCurrentDate}" SpecialDates="{Binding SpecialDatesList}"
            DateCommand="{Binding DateClickCommand}" />
        <StackLayout Grid.Row="1">
            <Label Text="{Binding SelectCurrentDate}" />
        </StackLayout>
    </Grid>
</ContentPage>