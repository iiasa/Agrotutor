<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:googleMaps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"
             xmlns:components="clr-namespace:CimmytApp.Core.Components.Views;assembly=CimmytApp"
             xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material.Forms"
             xmlns:lottie="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="CimmytApp.Core.Map.Views.MapMainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>
                <RowDefinition.Height>
                    <OnPlatform x:TypeArguments="GridLength">
                        <On Platform="Android" Value="0" />
                        <On Platform="iOS" Value="32" />
                    </OnPlatform>
                </RowDefinition.Height>
            </RowDefinition>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition>
                <RowDefinition.Height>
                    <OnPlatform x:TypeArguments="GridLength">
                        <On Platform="Android" Value="0" />
                        <On Platform="iOS" Value="16" />
                    </OnPlatform>
                </RowDefinition.Height>
            </RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <googleMaps:Map 
            x:Name="map" MapType="Hybrid"
            VerticalOptions="FillAndExpand" InitialCameraUpdate="20,-100,5"
            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="7" Grid.RowSpan="5"
            MapClicked="Handle_MapClicked" MapLongClicked="Handle_MapLongClicked"
            PinClicked="Handle_PinClicked" />
         
        <components:WeatherWidget 
            Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" 
            HorizontalOptions="CenterAndExpand" Margin="13"  HeightRequest="38" />

        <Frame BackgroundColor="Azure" Opacity="0.75" Padding="0"
            Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="3" 
            HorizontalOptions="CenterAndExpand" Margin="13"  HeightRequest="38"
            IsVisible="{Binding ShowCurrentMapTaskHint}">
            <StackLayout>
                <Label HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Margin="8" Text="{Binding CurrentMapTaskHint}"/>
            </StackLayout>
        </Frame>
 
        <lottie:AnimationView 
            x:Name="animationView" 
            Grid.Row="1"
            Animation="anim_loading.json" 
            Loop="True" 
            AutoPlay="True"
            VerticalOptions="FillAndExpand" 
            HorizontalOptions="FillAndExpand" />

        <StackLayout Style="{StaticResource MainMapIconsGroup}">
            <components:MiniMenuIcon HorizontalOptions="CenterAndExpand"
                IconText="Guide" IconSource="question.png" 
                Command="{Binding NavigateToMain}"/>
            <components:MiniMenuIcon HorizontalOptions="CenterAndExpand"
                IconText="Options" IconSource="icons_settings_96.png" 
                Command="{Binding NavigateToMain}"/>
            <components:MiniMenuIcon HorizontalOptions="CenterAndExpand"
                IconText="Calendar" IconSource="calendar.png" 
                Command="{Binding ShowCalendar}"/>
            <components:MiniMenuIcon HorizontalOptions="CenterAndExpand"
                IconText="Weather" IconSource="clear.png" 
                Command="{Binding ShowSettings}"/>
            <components:MiniMenuIcon HorizontalOptions="CenterAndExpand"
                IconText="Add parcel" IconSource="add.png" 
                Command="{Binding AddParcelClicked}"/>
        </StackLayout>

        <ContentView 
            ControlTemplate="{StaticResource MainMapSelectLocation}"
            Style="{StaticResource MainMapTaskUIContainer}"
            IsVisible="{Binding ShowSelectLocationUI}" />

        <ContentView 
            ControlTemplate="{StaticResource MainMapGPSLocation}"
            Style="{StaticResource MainMapTaskUIContainer}"
            IsVisible="{Binding ShowGPSLocationUI}" />

        <ContentView 
            ControlTemplate="{StaticResource BackgroundDimmer}"
            Grid.Row="0" Grid.Column="0" 
            Grid.ColumnSpan="7" Grid.RowSpan="7" />

        <ContentView
            x:Name="PlotDetailView"
            Style="{StaticResource MainMapPopup}"
            IsVisible="{Binding ShowPlotDetail}">
            <Frame Style="{StaticResource MainMapPopupBackground}">
                <StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="add.png" HeightRequest="20" />
                        <Label
                            HorizontalOptions="StartAndExpand"
                            Text="{Binding SelectedPlot.Name}"
                            FontSize="20" />

                    </StackLayout>
                    <components:Divider />
                    <ScrollView >
                        <StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label>Planted on:</Label>
                                <Label>Oct. 3, 2018</Label>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label>Irrigation:</Label>
                                <Label>Irrigated</Label>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label>Maturity type:</Label>
                                <Label>Late</Label>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label>Ideal climate:</Label>
                                <Label>Hybrid</Label>
                            </StackLayout>
                            <components:Divider />
                            <components:IconWithText
                                IconText="Add activity"
                                IconSource="add.png"
                                Command="{Binding AddActivityToSelectedPlot}" />

                            <components:IconWithText
                                IconText="Delineate plot"
                                IconSource="add.png"
                                Command="{Binding DelineateSelectedPlot}" />

                            <components:IconWithText
                                IconText="Add a picture"
                                IconSource="add.png"
                                Command="{Binding AddPictureToSelectedPlot}" />

                            <components:IconWithText
                                IconText="Add a video"
                                IconSource="add.png"
                                Command="{Binding AddVideoToSelectedPlot}" />

                            <components:IconWithText
                                IconText="Crop calendar"
                                IconSource="add.png"
                                Command="{Binding ShowCalendarForSelectedPlot}" />
                            <components:Divider />
                            <Label FontSize="15" Text="Historical information"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Text="Costs ($/ha):" Grid.Row="0" Grid.Column="0"/>
                                <Label Text="300" Grid.Row="0" Grid.Column="1"/>
                                <Image Source="add.png" WidthRequest="16" HorizontalOptions="Center" Grid.Row="0" Grid.Column="2"/>
                            </Grid>
                            <components:ValueLine
                                Text="Hi:"
                                Value="Ho"
                                ImageSource="add.png"/>
                         </StackLayout>
                     </ScrollView>
                </StackLayout>
            </Frame>
        </ContentView>

        <ContentView 
            x:Name="AddParcelView"
            Style="{StaticResource MainMapPopup}"
            IsVisible="{Binding ShowAddParcel}">
            <Frame Style="{StaticResource MainMapPopupBackground}">
                <ScrollView>
                    <StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="add.png" HeightRequest="20" />
                            <Label
                                HorizontalOptions="StartAndExpand"
                                Text="Add Parcel"
                                FontSize="20" />

                        </StackLayout>
                        <components:Divider />
                        <components:IconWithText
                            IconText="Using current location"
                            IconSource="get_location.png"
                            Command="{Binding ClickGetLocation}" />

                        <components:IconWithText
                            IconText="Selecting on the map"
                            IconSource="choose_location.png"
                            Command="{Binding ClickChooseLocation}" />

                    </StackLayout>
                </ScrollView>
            </Frame>
        </ContentView>

        <ContentView
            x:Name="FilterView"
            Style="{StaticResource MainMapPopup}"
            IsVisible="{Binding ShowOptions}">
            <Frame Style="{StaticResource MainMapPopupBackground}">
                <ScrollView>
                    <StackLayout>
                        <Label
                            HorizontalOptions="StartAndExpand"
                            Text="FilterData"
                            FontSize="20" />
                        <components:Divider />
                        <StackLayout Orientation="Horizontal">
                            <Label
                                    HorizontalOptions="StartAndExpand"
                                    Text="Lorem"
                                    VerticalOptions="Center" />
                            <material:MaterialCheckbox x:Name="IsShowAll" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label
                                    HorizontalOptions="StartAndExpand"
                                    Text="Heyhey"
                                    VerticalOptions="Center" />
                            <material:MaterialCheckbox x:Name="IsLastDay" HorizontalOptions="End"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label
                                    HorizontalOptions="StartAndExpand"
                                    Text="Woohooo!"
                                    VerticalOptions="Center" />
                            <material:MaterialRadioButton x:Name="IsLast3Days" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label
                                    HorizontalOptions="StartAndExpand" 
                                    Text="Blurgl"
                                    VerticalOptions="Center" />
                            <Button Command="{Binding FromCommand}" Text="fas-calendar" HeightRequest="50" />
                            <Label
                                    HorizontalOptions="StartAndExpand" TextColor="White"
                                    Text="Blurrgh"
                                    VerticalOptions="Center" />
                            <Button Command="{Binding ToCommand}" Text="fas-calendar" WidthRequest="50"
                                                    HeightRequest="50" />
                            <material:MaterialRadioButton x:Name="IsDateFilter"  TextColor="White"/>
                        </StackLayout>
                        <material:MaterialRadioButtonGroup>
                            <StackLayout>
                                <material:MaterialRadioButton Text="Moooo" TextColor="White" IsSelected="{Binding IsShowAll}" SelectedChangeCommand="{Binding FilterSelected}" />
                                <material:MaterialRadioButton Text="Moooo" TextColor="White" IsSelected="{Binding IsLastDay}" SelectedChangeCommand="{Binding FilterSelected}" />
                                <material:MaterialRadioButton Text="Moooo" TextColor="White" IsSelected="{Binding IsLast3Days}" SelectedChangeCommand="{Binding FilterSelected}" />
                                <material:MaterialRadioButton Text="Moooo" TextColor="White" IsSelected="{Binding IsLast3Days}" SelectedChangeCommand="{Binding FilterSelected}" />
                            </StackLayout>
                        </material:MaterialRadioButtonGroup>
                    </StackLayout>
                </ScrollView>
            </Frame>
        </ContentView>
    </Grid>
</ContentPage>