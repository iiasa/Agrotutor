<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CimmytApp.Core.Components.MenuIcon">
  <ContentView.Content>
      <StackLayout>
          <StackLayout.GestureRecognizers>
              <ClickGestureRecognizer x:Name="ClickGestureRecognizer" />
          </StackLayout.GestureRecognizers>

          <Image x:Name="IconImage" Source="farmer.png" WidthRequest="70" Margin="16" />
          <Label x:Name="IconTextLabel" HorizontalTextAlignment="Center" />
        </StackLayout>
  </ContentView.Content>
</ContentView>