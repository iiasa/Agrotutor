<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CimmytApp.Core.Components.Views.PriceForecastMonth"
    WidthRequest="160" HeightRequest="160">
    <Grid.RowDefinitions>
        <RowDefinition Height="2*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="2*" />
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
    </Grid.ColumnDefinitions>

    <Image Source="calendar2.png" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="4"/>
    <Label x:Name="lblMax" Text="35" Grid.Row="1" Grid.Column="1" />
    <Label x:Name="lblAverage" Text="30" FontSize="48" Grid.Row="2" Grid.Column="0" HorizontalOptions="End" />
    <Label x:Name="lblMin" Text="25" Grid.Row="3" Grid.Column="1" />
</Grid>