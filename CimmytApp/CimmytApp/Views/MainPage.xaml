            <!--     Text="{i18n:Translate add_parcel}" -->
            <!--     IconSrc="add.png" -->
            <!--     Grid.Row="0" Grid.Column="0" -->
            <!--     Command="{Binding NavigateAsyncCommand}" -->
            <!--     CommandParameter="AddParcelPage" /> -->
            <!-- -->
            <!-- -->
            <!-- </Grid> -->
        </StackLayout>
    </ScrollView>
</ContentPage>