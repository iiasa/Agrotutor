<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:forms="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    prism:ViewModelLocator.AutowireViewModel="True" x:Class="CimmytApp.Views.MainPage" Title="Title"
    Padding="16,16,16,0">
    <ScrollView>
        <StackLayout>
            <Grid Margin="0,0,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="¡Bienvenido!" FontSize="Large" forms:Grid.Row="0" forms:Grid.Column="0" />
                <Label Text="Selecciona una actividad para comenzar:" forms:Grid.Row="1" forms:Grid.Column="0" />
                <StackLayout Orientation="Vertical" forms:Grid.Row="0" forms:Grid.Column="1" forms:Grid.RowSpan="2"
                    HorizontalOptions="End">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}" CommandParameter="WelcomePage" />
                    </StackLayout.GestureRecognizers>

                    <Image Source="question.png" WidthRequest="50" />
                    <Label Text="Guía rápida" HorizontalTextAlignment="Center" />
                </StackLayout>
            </Grid>
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Text="Agregar parcela" forms:Grid.Row="1" forms:Grid.Column="0" HorizontalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}" CommandParameter="AddParcelPage" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Información de parcela" forms:Grid.Row="1" forms:Grid.Column="1"
                    HorizontalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}"
                            CommandParameter="ParcelsOverviewPage" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Mapa de parcelas" forms:Grid.Row="3" forms:Grid.Column="0"
                    HorizontalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToMapCommand}" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Calendario" forms:Grid.Row="3" forms:Grid.Column="1" HorizontalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}"
                            CommandParameter="TelerikCalendarPage" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Ver enlaces y herramientas" forms:Grid.Row="5" forms:Grid.Column="0"
                    HorizontalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}" CommandParameter="LinksPage" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Perfil de productor" forms:Grid.Row="5" forms:Grid.Column="1"
                    HorizontalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}" CommandParameter="ProfilePage" />
                    </Label.GestureRecognizers>
                </Label>

                <Image Source="add.png" forms:Grid.Row="0" forms:Grid.Column="0" WidthRequest="70" Margin="16">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}" CommandParameter="AddParcelPage" />
                    </Image.GestureRecognizers>
                </Image>

                <Image Source="farm.png" forms:Grid.Row="0" forms:Grid.Column="1" WidthRequest="70" Margin="16">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}"
                            CommandParameter="ParcelsOverviewPage" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Source="globe.png" forms:Grid.Row="2" forms:Grid.Column="0" WidthRequest="70" Margin="16">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}" CommandParameter="GenericMap" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Source="calendar.png" forms:Grid.Row="2" forms:Grid.Column="1" WidthRequest="70" Margin="16">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}"
                            CommandParameter="TelerikCalendarPage" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Source="link.png" forms:Grid.Row="4" forms:Grid.Column="0" WidthRequest="70" Margin="16">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}" CommandParameter="LinksPage" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Source="profile.png" forms:Grid.Row="4" forms:Grid.Column="1" WidthRequest="70" Margin="16">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateAsyncCommand}" CommandParameter="ProfilePage" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>